<Window x:Class="Lecture_7_TB_Labels_Buttons_RTB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture_7_TB_Labels_Buttons_RTB"
        mc:Ignorable="d"
        Title="Lecture 7 Notes" Height="450" Width="800">
    <!--Button, TextBox, Label, Rich Text Box-->
    <StackPanel x:Name="geraldSecondTextBox">  <!--Layout Tag-->


        <Label Content="First Name" />
        <TextBox Name="txtGerald"/>

        <Label Content="Last Name" />
        <TextBox Name="txtLastName" />
        
        <Button Content="Say Hi Gerald" Name="btnHiGerald" Click="btnHiGerald_Click"/>

        <Label Content="Full Name" />
        <TextBox Name="txtDisplay" />

        <!--Three Layouts : Grid, Canvas, StackPanel-->

        <!--StackPanel-->
    </StackPanel>
</Window>

